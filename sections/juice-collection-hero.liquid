        @keyframes move {
        0% {

            transform: translatey(0px) rotate(-120deg);
        }

    50% {
            transform: translatey(-20px) rotate(-120deg);
    }
        100% {

            transform: translatey(0px) rotate(-120deg);
        }
    }
    @keyframes move2 {
        0% {

            transform: translatey(0px) rotate(40deg);
