{% stylesheet %}

@keyframes float {
	0% {

		transform: translatey(0px) rotate(-10deg);
	}

  50% {
		transform: translatey(-20px) rotate(-10deg);
  }
	100% {

		transform: translatey(0px) rotate(-10deg);
	}
}
@keyframes float2 {
	0% {

		transform: translatey(0px) rotate(10deg);
	}

  50% {

	transform: translatey(-20px) rotate(10deg);
	}

	100% {

		transform: translatey(0px) rotate(10deg);
	}
}
@keyframes float3 {
	0% {

		transform: translatey(0px) rotate(30deg);
	}

  50% {

	transform: translatey(20px) rotate(30deg);
	}

	100% {

		transform: translatey(0px) rotate(30deg);
	}
}
@keyframes float4 {
	0% {

		transform: translatey(0px) rotate(-30deg);
	}

  50% {

	transform: translatey(20px) rotate(-30deg);
	}

	100% {

		transform: translatey(0px) rotate(-30deg);
	}
}
.hero {
  position: relative;
}

.hero-title-container {
  height: 50rem;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 15rem;
}
.hero-title {
  font-size: 100px !important;
  font-weight: bold;
  text-align: center;
  margin: 0;
  line-height: 8rem;
  width: 80rem !important;
}
.hero-text-container p {
  text-align: center;

  width: 35rem;
  margin-left: auto;
  margin-right: auto;
  font-size: 20px;
}
.hero-a-container {
  text-align: center;
}
.hero-a-container a {
  color: white;
}
.hero-text-container a {
  background-color: #f58153;

  padding: 1rem 2rem;

  color: white !important;
  text-decoration: none;
  font-weight: bold;
  border-radius: 5px;
}

.hero-img {
  width: 35rem;
  position: absolute;
  top: 0;
  z-index: -10;
}

.hero-blue-komb {

  top: 0rem;
  left: -3rem;
  animation: float 5s ease-in-out infinite;
}
.hero-red-komb {
  right: -5rem;

  top: 0rem;
  animation: float2 4s ease-in-out infinite;
}
.hero-yellow-komb {
  right: -10rem;
  top: 10rem;
  animation: float3 5s ease-in-out infinite;

}
.hero-orange-komb {
  left: -10rem;
  top: 10rem;
  animation: float4 4s ease-in-out infinite;
}

{% endstylesheet %}
